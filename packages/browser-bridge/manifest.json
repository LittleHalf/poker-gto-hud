{
  "manifest_version": 3,
  "name": "Poker GTO HUD Bridge",
  "version": "0.1.0",
  "description": "Captures live game state from PokerNow and forwards events to the GTO MCP server.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.pokernow.club/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pokernow.club/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Poker GTO HUD"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
